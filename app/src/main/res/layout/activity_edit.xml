<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/second"
    tools:context=".EditActivity">

    <EditText
        android:id="@+id/etEditCity"
        android:layout_width="208dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        android:hint="Enter the city name"
        android:inputType="textPersonName"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEditCountry" />

    <EditText
        android:id="@+id/etEditTime"
        android:layout_width="202dp"
        android:layout_height="49dp"
        android:layout_marginTop="164dp"
        android:text="21:45"
        android:textColor="@color/white"
        android:inputType="time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etEditCountry"
        android:layout_width="204dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:hint="Text country name"
        android:textColorHint="@color/white"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEditTime" />

    <Button
        android:id="@+id/btnEditApply"
        android:layout_width="127dp"
        android:layout_height="54dp"
        android:layout_marginTop="96dp"
        android:text="Apply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.429"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEditCity" />


</androidx.constraintlayout.widget.ConstraintLayout>