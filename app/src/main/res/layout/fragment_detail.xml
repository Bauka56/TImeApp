<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/second"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/tvDetailCity"
        android:layout_width="247dp"
        android:layout_height="94dp"
        android:layout_marginTop="28dp"
        android:textSize="45sp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="New York"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvDetailCountry"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="@+id/tvDetailCountry"
        app:layout_constraintTop_toBottomOf="@+id/tvDetailCountry" />

    <TextView
        android:id="@+id/tvDetailCountry"
        android:layout_width="144dp"
        android:layout_height="56dp"
        android:layout_marginTop="56dp"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:text="USA"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/tvDetailTime"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="@+id/tvDetailTime"
        app:layout_constraintTop_toBottomOf="@+id/tvDetailTime" />

    <TextView
        android:id="@+id/tvDetailTime"
        android:layout_width="236dp"
        android:layout_height="159dp"
        android:layout_marginTop="164dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="21:45"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>